# 盈米金融教学平台 - 密钥配置示例
# 将此文件复制为 secrets.toml 并填入真实的密钥

# MCP API密钥
MCP_API_KEY = "your_mcp_api_key_here"

# JWT密钥（用于生成认证token，建议使用随机字符串）
JWT_SECRET = "your_jwt_secret_key_here_use_random_string"

# 数据库配置（可选，默认使用SQLite）
# DB_TYPE = "sqlite"  # 或 "postgresql", "mysql"
# DB_HOST = "localhost"
# DB_PORT = "5432"
# DB_NAME = "finance_edu"
# DB_USER = "your_db_username"
# DB_PASSWORD = "your_db_password"

# 邮件配置（可选，用于发送通知）
# SMTP_HOST = "smtp.example.com"
# SMTP_PORT = "587"
# SMTP_USER = "your_email@example.com"
# SMTP_PASSWORD = "your_email_password"

# 其他配置
# DEBUG = false
# LOG_LEVEL = "INFO"
